{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // FIXME: run inside venv
            "label": "build",
            "type": "shell",
            "command": "${config:python.pythonPath} -m poetry build .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "autopep8",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "autopep8",
                "--diff",
                "--recursive",
                "."
            ],
            "problemMatcher": []
        }
    ]
}